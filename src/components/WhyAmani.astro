---
import { Image } from "astro:assets";
import WhyImage from "../../public/png/why.png";
import Thumb from "../../public/svg/thumb.svg?raw";

const features = [
  {
    title: "Pilih lokasi yang kamu suka",
    desc: "Ada di berbagai lokasi strategis, jadi kamu bebas pilih area yang paling pas buat kamu!",
  },
  {
    title: "Real-time progress",
    desc: "Transparansi adalah prioritas kami. Kamu bakal terus dapet update real-time tentang progres rumahmu.",
  },
  {
    title: "Syarat Mudah & Bebas Ribet",
    desc: "Gak perlu slip gaji atau syarat yang bikin pusing, kamu udah bisa punya rumah. Semua orang bisa punya kesempatan!",
  },
  {
    title: "Solusi Hunian yang Lengkap",
    desc: "Semua kebutuhan hunian kamu, dari beli rumah, investasi, sampai lainnya, bisa langsung semua di Amani!",
  },
];
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kenapa Amanihome</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50">
    <section
      class="w-full px-4 md:px-[7.5rem] py-12 md:py-[6.25rem] grid grid-cols-1 md:grid-cols-2 gap-28 bg-[#F8FAFC] items-center"
    >
      <!-- Left Section: Heading, Description, and Features -->
      <div class="flex flex-col justify-center">
        <!-- Heading -->
        <div class="w-28 md:w-40 h-2 md:h-4 bg-[#003399] rounded-lg mb-2"></div>
        <h2 class="text-[#001847] text-2xl md:text-4xl font-semibold mb-4">
          Solusi Hunian Terbaik Kamu
        </h2>

        <!-- Description -->

        <!-- Features -->
        <div class="space-y-6">
          {
            features.map((feature) => (
              <div class="flex items-start flex-row gap-4">
                <Fragment set:html={Thumb} />
                <div class="w-full">
                  <h3 class="text-[#001847] text-base md:text-lg font-semibold">
                    {feature.title}
                  </h3>
                  <p class="text-gray-600 text-sm md:text-base">
                    {feature.desc}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Right Section: Image and Dashboard Visualization -->
      <div class="w-full">
        <Image src={WhyImage} alt="WhyImage" />
      </div>
    </section>
  </body>
</html>
