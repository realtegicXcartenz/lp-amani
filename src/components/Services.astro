---
import Home from "../../public/svg/services/home.svg?raw";
import Contractor from "../../public/svg/services/contractor.svg?raw";
import Investor from "../../public/svg/services/investor.svg?raw";
import Developer from "../../public/svg/services/developer.svg?raw";
import Supplier from "../../public/svg/services/supplier.svg?raw";

const ServiceRow1 = [
  {
    logo: Home,
    label: "Home Buyer",
    desc: "Bantu wujudkan rumah impian Anda",
  },
  {
    logo: Contractor,
    label: "Kontraktor",
    desc: "Solusi Pendanaan untuk Proyek Konstruksi Anda",
  },
  {
    logo: Investor,
    label: "Investor",
    desc: "Strategi Cerdas untuk Meningkatkan pasive income Anda",
  },
];

const ServiceRow2 = [
  {
    logo: Developer,
    label: "Developer",
    desc: "Jalan Terbaik untuk Meningkatkan Penjualan Proyek Anda",
  },
  {
    logo: Supplier,
    label: "Supplier",
    desc: "Strategi Sederhana untuk Memperluas Pasar Anda",
  },
];
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Layanan Lain Amanihome</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-50">
    <!-- Main Section -->
    <section
      class="w-full px-6 md:px-[7.5rem] lg:px-40 py-[6.25rem] text-center bg-white flex flex-col items-center"
    >
      <!-- Heading -->
      <h2 class="text-[#1F1F1F] text-3xl md:text-4xl font-bold mb-6">
        Layanan Lain Amanihome
      </h2>
      <p class="text-gray-500 text-lg md:text-xl max-w-3xl mb-12">
        Temukan berbagai layanan tambahan kami yang dirancang untuk memenuhi
        kebutuhan Anda secara menyeluruh. Dapatkan dukungan berkelanjutan
        melalui pembiayaan fleksibel dan layanan purna jual yang memastikan
        kepuasan Anda. Mari jelajahi semua layanan yang kami tawarkan untuk
        mendukung perjalanan Anda bersama Amani!
      </p>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
        {
          ServiceRow1.map((service) => {
            return (
              <div class="bg-[#F8FAFC] max-w-[25rem] shadow-lg rounded-2xl p-6 flex items-start border-t-[#2F6DEB] border-t-[0.25rem] transition flex-col justify-between  text-start">
                <Fragment set:html={service.logo} />
                <h3 class="text-[#1F1F1F] text-lg font-bold mb-2">
                  {service.label}
                </h3>
                <p class="text-[#8A8A8A] mb-4 text-start">{service.desc}</p>
                <a href="#" class="text-[#003399] font-medium hover:underline">
                  Pelajari >
                </a>
              </div>
            );
          })
        }
      </div>

      <!-- Second Row of Services -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {
          ServiceRow2.map((service) => {
            return (
              <div class="bg-[#F8FAFC] max-w-[25rem] shadow-lg rounded-2xl p-6 border-t-[#2F6DEB] border-t-[0.25rem] transition flex-col justify-between items-center text-start">
                <div class="flex flex-col items-start gap-2">
                  <Fragment set:html={service.logo} />
                  <h3 class="text-[#1F1F1F] text-lg font-bold mb-2">
                    {service.label}
                  </h3>
                  <p class="text-[#8A8A8A] mb-4 text-start">{service.desc}</p>
                </div>
                <a href="#" class="text-[#003399] font-medium hover:underline">
                  Pelajari >
                </a>
              </div>
            );
          })
        }
      </div>
    </section>
  </body>
</html>
