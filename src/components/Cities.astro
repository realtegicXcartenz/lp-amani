<section class="py-8 bg-white">
  <div class="container mx-auto px-4">
    <h2
      class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-start mb-6 break-words w-full md:w-[60%] lg:w-[70%] leading-[40px] sm:leading-[45px] md:leading-[50px] lg:leading-[60px]"
    >
      Temukan Kami di Kota Berikut untuk Hunian Impianmu! üè°‚ú®
    </h2>

    <!-- Swiper container -->
    <swiper-container
      class="w-full swiper-2"
      init="false"
      controller-control=".swiper-2"
    >
      {
        cities.map((city) => (
          <swiper-slide key={city.name}>
            <div class="relative rounded-lg overflow-hidden shadow-md w-full">
              <Image
                src={city.image}
                alt={city.name}
                class="w-full h-48 md:h-64 lg:h-72 object-cover"
              />
              <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent text-white p-4">
                <h3 class="text-lg md:text-xl font-semibold">{city.name}</h3>
                <p class="text-sm md:text-base">{city.projects}</p>
              </div>
            </div>
          </swiper-slide>
        ))
      }
    </swiper-container>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const swiperEl2 = document.querySelector(".swiper-2"); // Select the Swiper 2 container

    const swiperParams2 = {
      autoplay: {
        delay: 500, // Reduced delay to 500ms for faster autoplay
        disableOnInteraction: false,
      },
      breakpoints: {
        640: {
          slidesPerView: 2.5, // For mobile
        },
        768: {
          slidesPerView: 2.5, // For tablets
        },
        1024: {
          slidesPerView: 3.5, // For desktops
        },
        1280: {
          slidesPerView: 4.5, // For large screens
        },
      },
      loop: true,
      spaceBetween: 20,
      centeredSlides: true,
      speed: 800,
    };

    // Assign the parameters to the Swiper element
    Object.assign(swiperEl2, swiperParams2);

    // Initialize Swiper
    swiperEl2.initialize();
  });
</script>
