---
import ContactBg from "../../public/svg/contact_bg.svg?raw";
import Buyer from "../../public/svg/contact_us/buyer.svg?raw";
import Investor from "../../public/svg/contact_us/investor.svg?raw";
import Seller from "../../public/svg/contact_us/seller.svg?raw";
import Developer from "../../public/svg/contact_us/developer.svg?raw";
import Contractor from "../../public/svg/contact_us/contractor.svg?raw";
import LandOwner from "../../public/svg/contact_us/land_owner.svg?raw";
import Supplier from "../../public/svg/contact_us/supplier.svg?raw";

const buttonsRow1 = [
  { label: "Buyer", icon: Buyer, link: "https://amani.co.id/buyer" },
  { label: "Investor", icon: Investor, link: "https://amani.co.id/investor" },
  { label: "Seller", icon: Seller, link: "https://amani.co.id/seller" },
  { label: "Developer", icon: Developer, link: "https://amani.co.id/developer" },
  { label: "Kontraktor", icon: Contractor, link: "https://amani.co.id/kontraktor" },
  { label: "Land Owner", icon: LandOwner, link: "https://amani.co.id/landowner" },
  { label: "Supplier", icon: Supplier, link: "https://amani.co.id/supplier" },
];
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Siap Bergabung dengan Amani</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <!-- Join Amani Section -->
    <section class="p-6 bg-white">
      <div
        class="relative w-full py-12 md:py-[7.5rem] px-6 md:px-[7.5rem] lg:px-40 bg-gradient-to-b from-[#81BA0F] to-[#3A5407] rounded-3xl"
      >
        <div
          class="absolute top-0 left-0 w-[150px] md:w-[250px] h-auto bg-left bg-contain hidden md:block"
        >
          <Fragment set:html={ContactBg} />
        </div>
        <div class="flex flex-col items-center justify-center">
          <div
            class="text-white text-center lg:text-left mb-6 lg:mb-0 lg:w-1/2"
          >
            <h2
              class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 text-center"
            >
              Siap bangun dengan Amani?
            </h2>
            <p class="text-white text-base md:text-lg mb-4 text-center">
              Aku ingin bergabung sebagaiâ€¦
            </p>
          </div>

          <!-- <div class="container mx-auto py-16 flex justify-center items-center"> -->
          <div
            class="flex flex-wrap justify-center gap-6 items-center w-[52.5rem]"
          >
            {
              buttonsRow1.map((button) => (
                <div class="relative">
                  <button
                    class={`flex items-center space-x-2 px-4 py-2 border border-white text-white rounded-full transition-all ease-in-out hover:shadow-[0px_4px_24px_-1px_rgba(0,0,0,0.2)] hover:border-none`}
                  >
                    <Fragment set:html={button.icon} />
                    <span>{button.label}</span>
                  </button>
                </div>
              ))
            }
            <!-- </div> -->
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
