---
import ContactBg from "../../public/svg/contact_bg.svg?raw";
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Siap Bergabung dengan Amani</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <!-- Join Amani Section -->
    <section
      class="relative w-full bg-gradient-to-b from-[#81BA0F] to-[#3A5407] py-12 md:py-[7.5rem] px-6 md:px-[7.5rem] lg:px-40"
    >
      <!-- Left Side Background Image -->
      <div
        class="absolute top-0 left-0 w-[150px] md:w-[250px] h-auto bg-left bg-contain hidden md:block"
      >
        <Fragment set:html={ContactBg} />
      </div>

      <div
        class="relative flex flex-col lg:flex-row items-center lg:items-start justify-between"
      >
        <!-- Left Side - Title -->
        <div class="text-white text-center lg:text-left mb-6 lg:mb-0 lg:w-1/2">
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4">
            Siap bergabung dengan Amani?
          </h2>
        </div>

        <!-- Right Side - Button and Description -->
        <div class="flex flex-col items-center lg:items-start lg:w-1/2">
          <p
            class="text-white text-base md:text-lg mb-4 max-w-sm text-center lg:text-left"
          >
            Nikmati pengalaman yang memuaskan, dari pemilihan hunian hingga
            dukungan berkelanjutan.
          </p>
          <a
            href="#"
            class="bg-white text-[#6C9B0C] font-bold py-3 px-8 rounded-full shadow-lg hover:bg-gray-100 transition flex items-center"
          >
            Hubungi Amani
            <span class="ml-2">â†’</span>
          </a>
        </div>
      </div>
    </section>
  </body>
</html>
